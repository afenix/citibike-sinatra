<h3>Let's map your bike route:</h3>

<br>
<form action="/map" method="post" class="form-horizontal">
  <div id="form-group">
    <label name="start">Start:</label>
    <select id="start" name="start">
      <% @data.each do |station| %>
        <option value="<%= [station["lat"].to_f / 1000000, station["lng"].to_f / 1000000] %>"><%= station["name"] %></option>
      <% end %>
    </select>
  </div>

  <div id="form-group">
    <label name="ending">End:</label>
    <select id="end" name="end">
      <% @data.each do |station| %>
      <option value="<%= [station["lat"].to_f / 1000000, station["lng"].to_f / 1000000] %>"><%= station["name"] %></option>
      <% end %>
    </select>
  </div>
    <button id="button" name="submit" class="btn btn-default">Submit</button>
</form>

<br>
