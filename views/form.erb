<h3>Let's map your bike route:</h3>

<br>
<form action="/form" method="post" class="form-horizontal">
  <div class="form-group">
    <label name="starting">Start:</label>
    <select name="starting">
      <% @data.each do |object| %>
      <option selected <%= object['name'] %>><%= object['name'] %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label name="ending">End:</label>
    <select name="ending">
      <% @data.each do |object| %>
      <option selected <%= object['name'] %>><%= object['name'] %></option>
      <% end %>
    </select>
  </div>
    <button name="submit" class="btn btn-default">Submit</button>
</form>

<a href="/"><== Go Back</a>
